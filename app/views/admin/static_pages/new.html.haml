- @crumbs = [{title: 'ページ一覧', path: admin_static_pages_path}, {title: '新規作成'}]
= form_for @static_page, url: admin_static_pages_path do |f|
  .card
    .card-header
      ページ情報
    .card-body
      = render 'form', f: f
      .float-right
        = f.submit 'プレビュー', class: 'btn btn-success mr-2', name: 'static_page[preview]'
        = f.submit '登録', class: 'btn btn-primary mr-2'
        = link_to 'キャンセル', admin_static_pages_path, class: 'btn btn-light'