- @crumbs = [{title: 'カテゴリー一覧', link: admin_categories_path}, {title: '新規作成'}]

.card
  .card-body
    = form_for @category, url: admin_categories_path do |f|
      = render 'form', f: f
      .text-right
        = f.submit '登録', class: 'btn btn-primary mr-2'
        = link_to 'キャンセル', admin_categories_path, class: 'btn btn-light'