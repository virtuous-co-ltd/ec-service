- label_class = 'col-sm-3 col-form-label text-right'
.form-group.row
  = f.label :title, class: "#{label_class} required"
  .col-sm-9
    = f.text_field :title, class: 'form-control'
    = error_label_tag(f.object, :title)
.form-group.row.link_area
  = f.label :link_url, class: label_class
  .col-sm-9
    = f.text_field :link_url, class: 'form-control'
    = error_label_tag(f.object, :link_url)

